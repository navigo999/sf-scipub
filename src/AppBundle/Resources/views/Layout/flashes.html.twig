{% if app.session.flashbag.peekAll is not empty %}
    <div class="container">
        {% for type, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ type }}">
                    {{ flash|raw }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
